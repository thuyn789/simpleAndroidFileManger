<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_option_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/help_text0"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="" />

    <TextView
        android:id="@+id/help_text1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="For more information:"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/help_text2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="https://www.google.com"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/help_text4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Thank you for using the app"
        android:textSize="15sp"/>

</LinearLayout>